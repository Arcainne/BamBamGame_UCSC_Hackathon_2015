<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.arcainne.BamBam" >

    <uses-permission
        android:required="true"
        android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission
        android:required="true"
        android:name="android.permission.CHANGE_WIFI_STATE"/>
    <uses-permission
        android:required="true"
        android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.arcainne.BamBam.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.arcainne.BamBam.GamePlayActivity"
            android:label="@string/title_activity_game_play"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.arcainne.BamBam.HostActivity"
            android:label="@string/title_activity_host"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.arcainne.BamBam.EndActivity"
            android:label="@string/title_activity_end"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>
